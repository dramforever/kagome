{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "incremental": true,
    "jsx": "react",
    "declarationDir": "dist",
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
